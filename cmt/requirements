package embed_python

version v0r0p2
author t. burnett <tburnett@u.washington.edu>

#$Id: requirements,v 1.3 2006/11/28 20:45:23 burnett Exp $

use GlastPolicy *
use python v* IExternal

apply_pattern package_include
apply_pattern package_linkopts

path_append PYTHONPATH $(embed_python_root)/python


# have to add this since python does not.
macro python_linkopts "" \
   linux "-lpython2.4  -L$(python_DIR)/lib/python2.4/config"\
   WIN32 "$(python_DIR)\libs\$(python_LIB) "

private

macro source "*.cxx" WIN32 "*.h *.cxx"
library embed_python -no_share \
  -s=../embed_python $(source)\
  -s=../src $(source)

macro pysource "" WIN32 "*.py"
application test_embed_python -s=test $(source) \
 -s=../python $(pysource)
